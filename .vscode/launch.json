{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Inventory.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-inventory-api",
            "program": "${workspaceFolder}/src/Inventory/Inventory.Api/bin/Debug/net9.0/Inventory.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Inventory/Inventory.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
